doctype html
html
  head
      block head
        title="EZReads"
        link(rel='stylesheet' href='/stylesheets/layout.css')
  body
    div(id='navbar')
      div(id='this_should_be_an_image_later' class='navbar_item') EZ Reads Logo
      a(id='home_button' class='navbar_item' href='http://localhost:8083/') Home
      a(id='profile_button' class='navbar_item' href='http://localhost:8083/profile') Profile
      div(class='navbar_item')
        label System
        select(id='system' default="System") System
            option(value="PC") PC
            option(value="PS5") PS5
            option(value="PS4") PS4
            option(value="PS3") PS3
            option(value="PS2") PS2
            option(value="PS1") PS1
            option(value="Xbox Series") Xbox Series
            option(value="Xbox One") Xbox One
            option(value="Xbox 360") Xbox 360
            option(value="Xbox") Xbox
            option(value="Switch") Switch
            option(value="WiiU") WiiU
            option(value="Wii") Wii
            option(value="Gamecube") Gamecube
            option(value="N64") N64
            option(value="SNES") SNES
            option(value="NES") NES
            option(value="Genesis") Genesis
            option(value="Sega Saturn") Sega Saturn
            option(value="Dreamcast") Dreamcast
            option(value="DS") DS
            option(value="PSP") PSP
        label Genre
        select(id='genre') Genre
          option(value="Battle Royale") Battle Royale
          option(value="Card") Card
          option(value="Defense / Tower") Defense / Tower
          option(value="MMO") MMO
          option(value="Party") Party
          option(value="Shooter") Shooter
          option(value="Strategy") Strategy
          option(value="Survival") Survival
          option(value="Horror") Horror
          option(value="Point N Click") Point N Click
          option(value="Fighting") Fighting
          option(value="Management") Management
          option(value="Visual Novel") Visual Novel
          option(value="Creative") Creative
          option(value="Roguelite / Roguelike") Roguelite / Roguelike
          option(value="Danmaku") Danmaku
          option(value="MOBA") MOBA
          option(value="Open World") Open World
          option(value="Puzzle") Puzzle
          option(value="Platformer") Platformer
          option(value="Simulation") Simulation
          option(value="Stealth") Stealth
          option(value="Action") Action
          option(value="Casual") Casual
          option(value="RPG") RPG
          option(value="Adventure") Adventure
          option(value="Racing") Racing
          option(value="Rhythm") Rhythm
          option(value="RTS") RTS
          option(value="Beat Em Up") Beat Em Up
          option(value="Sports") Sports
          option(value="Other") Other
        button(id='search_button') Go
      a(id='login_signup' class='navbar_item' href='http://localhost:8083/login') Login / Sign Up
    block content
